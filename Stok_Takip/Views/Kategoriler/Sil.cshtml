@model Stok_Takip.Models.Entity.Kategoriler
@{
    ViewBag.Title = "Sil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Silme Sayfası</h2>
<div class="container">
    @using (Html.BeginForm("Sil", "Kategoriler "))
    {   
        
    <div class="form-group">
        @Html.HiddenFor(x => x.ID)
        @Html.LabelFor(x => x.Kategori)
        @Html.DisplayFor(x => x.Kategori, new { @class = "form-control" })


    </div>

    <div class="form-group">
        <button class="btn btn-danger">Kategori Sil</button>
        <a href="/Kategoriler/Index/">Anasayfa</a>

    </div>


    }


</div>
