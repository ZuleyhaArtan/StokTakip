@using Stok_Takip.Models.Entity
@model List<Stok_Takip.Models.Entity.Kategoriler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Kategoriler Sayfası</h2>

<table class="table table-bordered">


    <thead>

        <tr>
            <td>

                ID

            </td>
            <td>

                Kategori

            </td>
            <td>
                Güncelle
            </td>
            <td>
                Sil
            </td>



        </tr>

    </thead>

    <tbody>


        @foreach (var item in Model)
        {

        <tr>
            <td>@item.ID</td>
            <td>@item.Kategori</td>
            <td><a href="/Kategoriler/Guncelle/@item.ID" class="btn btn-warning"></a>Güncelle</td>
            <td><a href="/Kategoriler/Sil/@item.ID" class="btn btn-danger"></a>Sil</td>

        </tr>
        }


    </tbody>



</table>

<a href="/Kategoriler/Ekle/" class="btn btn-success" style="margin-top:10px;">Kategori Ekle</a>
