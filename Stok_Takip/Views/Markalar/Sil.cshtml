@model Stok_Takip.Models.Entity.Markalar

@{
    ViewBag.Title = "Sil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Marka Silme Sayfası</h2>

 <div class="container">
    @using (Html.BeginForm("Sil", "Markalar"))
    {
        <div class="form-group">
            @Html.HiddenFor(x => x.ID)
            @Html.LabelFor(x => x.Marka)
            @Html.DisplayFor(x => x.Marka, new { @class = "form-control" })


        </div>

        <div class="form-group">

            <button class="btn btn-danger">Birim Sil</button>
            <a href="/Markalar/Index/">Anasayfa</a>

        </div>


    }
     </div>