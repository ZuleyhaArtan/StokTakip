@model Stok_Takip.Models.Entity.Markalar
@{
    ViewBag.Title = "Guncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Marka Güncelleme Sayfası</h2>


<div class="container">
    @using (Html.BeginForm("Guncelle", "Markalar", FormMethod.Post))
    {
        @Html.HiddenFor(x => x.ID)
        <div class="form-group">
            @Html.LabelFor(x => x.Kategoriler.Kategori)
            @Html.DropDownList("KategoriID", null, "---Seçiniz---", new { @class = "form control" })

        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Marka)
            @Html.TextBoxFor(x => x.Marka, new { @class = "form control" })

        </div>
        <div><button class="btn btn-success">Marka Güncelle</button></div>
             <a href="/Markalar/Index/">Anasayfa</a>
    }

</div>